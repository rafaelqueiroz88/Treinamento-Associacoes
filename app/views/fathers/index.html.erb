<p id="notice"><%= notice %></p>

<h1>Fathers</h1>

<%= form_tag(fathers_path, method: :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Digite um nome...' %>
  <%= submit_tag "Procurar" %>
<% end %>

<br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Ocupação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fathers.each do |father| %>
      <tr>
        <td><%= father.name %></td>
        <td><%= father.cpf %></td>
        <td><%= father.email %></td>
        <td><%= father.ocupacao_descricao %></td>
        <td><%= link_to 'Show', father %></td>
        <td><%= link_to 'Edit', edit_father_path(father) %></td>
        <td><%= link_to 'Destroy', father, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<br/>

<%= link_to 'New Father', new_father_path, class: "btn btn-primary" %>

